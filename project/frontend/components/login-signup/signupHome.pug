.container
      h1 Signup
      form(action='/api/v1/register', method='POST')
        .field.name-field
          .input-field
            input(type='text', placeholder='Enter your name', name='name')
            span.error.email-error
              i.bx.bx-error-circle.error-icon
              p.error-text Please enter your name
        .field.email-field
          .input-field
            input(type='email', placeholder='Enter your email', name='email')
          span.error.email-error
            i.bx.bx-error-circle.error-icon
            p.error-text Please enter a valid email
        .field.create-password
          .input-field
            input(type='password', placeholder='Create password', name='password')
            i.bx.bx-hide.show-hide
          span.error.password-error
            i.bx.bx-error-circle.error-icon
            p.error-text Please enter atleast 8 charatcer with number, symbol, small and capital letter.
        .input-field.button
          input(type='submit', value='Signup')
